
@{
    Layout = null;
}

<div ng-controller="adminCtrl as vm">
    <div class="row">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active">
                <a href="#">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    Lobby Designs
                </a>
            </li>
        </ul>
    </div>

    <br />

    <div class="row">
        <a ui-sref="addLobbyDesign" class="btn btn-info pull-right" aria-label="Left Align">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Add Lobby Designs
        </a>

        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <td>Lobby Template</td>
                        <td>Type</td>
                        <td>Description</td>
                        <td>Status</td>
                        <td>Created</td>
                        <td>Updated</td>
                        <td>Credential</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="template in vm.Templates">
                        <td ng-bind="template.Name"></td>
                        <td ng-bind="template.Type"></td>
                        <td ng-bind="template.Description"></td>
                        <td>
                            <drop-down-dir id="template.Id" selected-item="template.Status" item-changed="vm.StatusChangeEvent" />
                        </td>
                        <td ng-bind="template.CreatedDate"></td>
                        <td ng-bind="template.UpdatedDate"></td>
                        <td>
                            <a>
                                <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <a ui-sref="updateLobbyDesign({id:template.Id})" class="btn btn-info">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>



