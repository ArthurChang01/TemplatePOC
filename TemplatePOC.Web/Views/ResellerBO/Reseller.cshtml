
@{
    Layout = null;
}

<div ng-controller="resellerCtrl as vm">
    <div class="row">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active">
                <a href="#">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    Lobbies
                </a>
            </li>
        </ul>
    </div>

    <br />

    <div class="row">
        <a ui-sref="addLobby" class="btn btn-info pull-right" aria-label="Left Align">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Add Lobby
        </a>

        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <td>Lobby Name</td>
                    <td>Template Name</td>
                    <td>Type</td>
                    <td>Description</td>
                    <td>Status</td>
                    <td>Created</td>
                    <td>Updated</td>
                    <td>Credential</td>
                    <td></td>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="lobby in vm.lobbies">
                    <td ng-bind="lobby.Name"></td>
                    <td ng-bind="lobby.TemplateName"></td>
                    <td ng-bind="lobby.Type"></td>
                    <td ng-bind="lobby.Description"></td>
                    <td>
                        <drop-down-dir id="lobby.Id" selected-item="lobby.Status" item-changed="vm.StatusChangeEvent"/>
                    </td>
                    <td ng-bind="lobby.CreatedDate"></td>
                    <td ng-bind="lobby.UpdatedDate"></td>
                    <td>
                        <a>
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a ui-sref="updateLobby({id:lobby.Id})" class="btn btn-info">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>



